@model List<Category>
@*
    @ model list<category> diyerek buraya gelicek olan verinini tipini bir list category olduğunu belirtmiş olduk yani veriyi karşıladık aynı zamanda ön tanımlı adı model olan bir değişkenin içine veriiy almış olduk

*@

<div class="page-header d-flex justify-content-between">
    <h3 class="display-6 text-primary mb-1">Kategoriler<h3>
          
            <a asp-area="Admin" asp-controller="Category" asp-action="Create" title="Yeni Kategori Ekle" type="button"
                    class="btn btn-icon btn-round btn-success">
                <i class="fa fa-plus"></i>
            </a>
    <ul class="breadcrumbs mb-3">
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="entityDatatable"
                           class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Kategori</th>
                                <th>İşlemler</th>                            
                            </tr>
                        </thead>
                        
                        <tbody>
                            @foreach(var x in Model)
                            {
                                <tr>
                                    <td width="30">@x.Id</td>
                                    <td>@x.Name</td>
                                    <td width="115" class="text-center">
                                        <a class="btn btn-warning pt-1 pb-0 px-2" asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@x.Id" title="Düzenlemek İçin Tıklayın"><i class="fas fa-pen-square fs-4 text-white"></i></a>
                                        <a class="btn btn-info pt-1 pb-0 px-2" asp-area="Admin" asp-controller="Category" asp-action="SoftDelete" asp-route-id="@x.Id" title="Çöp Kutusuna Atmak İçin Tıklayın"><i class="fas fa-trash-alt fs-4 text-white"></i></a>
                                        <a class="btn btn-danger pt-1 pb-0 px-2" asp-area="Admin" asp-controller="Category" asp-action="HardDelete" asp-route-id="@x.Id" title="Kalıcı Silmek İçin Tıklayın"><i class="fas fa-minus-circle fs-4 text-white"></i></a>
                                    </td>
                                </tr>
                            }
                            

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

   
</div>
@section Scripts {
    <partial name="_DatatablesScriptsPartial" />
}
